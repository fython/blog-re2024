---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";
import CCLicenses from "./CCLicenses.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={`w-full ${noMarginTop ? "" : "mt-auto"}`}>
  <Hr noPadding />
  <div class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4">
    <Socials centered />
    <div class="my-2 flex flex-row items-center whitespace-nowrap text-sm sm:flex-row">
      <span
        >Copyright &#169; {currentYear}
        <span property="cc:attributionName">烧饼</span></span
      >
      &nbsp;|&nbsp;内容以&thinsp;<CCLicenses />&thinsp;协议发布
    </div>
  </div>
</footer>
