---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  target?: string;
  rel?: string;
}

const {
  href,
  target,
  rel,
  className,
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

{
  disabled ? (
    <span
      class={`group inline-block ${className}`}
      aria-label={ariaLabel}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {href}
      {target}
      {rel}
      class={`group inline-block hover:text-skin-accent ${className}`}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}
